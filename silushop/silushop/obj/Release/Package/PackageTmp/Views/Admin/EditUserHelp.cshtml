@model RelexBarDLL.UserHelp
<div class="col-md-12">
    @Html.HiddenFor(m=>m.ID)
    <div class="form-inline">
        <span class="col-md-2">标题：</span>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-inline">
        <span class="col-md-2">
            类型：
        </span>
        @Html.DropDownListFor(m=>m.Type,new List<SelectListItem>() {
                new SelectListItem() {Text="关于我们",Value="1" },
                new SelectListItem() {Text="帮助中心",Value="2" },
                new SelectListItem() {Text="丝路商学院",Value="3" },
                new SelectListItem() {Text="会员特权",Value="4" }
        },new { @class="form-control" } )
    </div>
    <div class="form-inline">
        <div class="col-md-2">内容：</div>
        <div class="col-md-10" style="margin-left: -1.5rem;">
            @Html.TextAreaFor(m=>m.Content,new { style = "height:200px" } )
        </div>

    </div>
</div>
<script>
    function euinit() {
        var editor = new wangEditor('Content');
        editor.config.uploadImgUrl = '/File/ImgUpload2';
        editor.create();
    }
    euinit();
</script>
