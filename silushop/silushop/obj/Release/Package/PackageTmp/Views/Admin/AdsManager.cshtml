
<style>
    #uppwdpanel, #addpanel {
        margin-top: 10%;
        padding: 0;
    }
    #edit-ad-form>div{margin-bottom: 5px;}
</style>
<script>
    var hasFooter = false;
    var AdsManager = {};
    AdsManager.searchKey = "";
    function createFooter(sum) {
        if (!hasFooter) {
            $(".pagination").createPage({

                totalPage: parseInt((sum - 1) / 10 + 1),
                // totalPage: 10,
                currPage: 1,
                backFn: function (p) {
                    GetAdsCardList(p);
                }
            });
            hasFooter = true;
        }
    }
    function toPage(index) {
        GetAdsCardList(index);
    };
    //获取用户列表
    function GetAdsCardList(index) {
        waiting();
        $.get("AdsCardList", "index=" + index + "&key=" + AdsManager.searchKey, function (data) {
            AdsManager.index = index;
            $("#adminbody").html(data);
            waitingHide();
        }, "html")
    }
    function USearch() {
        AdsManager.searchKey = $("#key").val();
        hasFooter = false;
        $(".pagination").html("");
        GetAdsCardList(1);
    }
    //更改管理员状态
    function CStatus(ID, e) {
        waiting();
        var status = 1;
        if (e.value == "启用")
        { status = 0; }
        $.post("UpdateAdsStatus", "id=" + ID + "&status=" + status, function (data) {
            if (data.code == "1") {
                if (status == 1) {
                    e.value = "启用";
                } else {
                    e.value = "禁用";
                }
            } else {
                alert(data.msg);
            }
            waitingHide();
        }, "json")
    }
    function addClose() {
        $("#addpanel input:not([type='button'])").val("");
        $("#Location").val(1);
        $("#EditAD").hide();
        $("#adimgshow").attr("src", "/img/noimg.png");
    }
    function DeleteAds(ID) {
        if (confirm("确定要删除该广告吗？"))
        {
            $.post("DeleteAD", "id=" + ID, function (data) {
                alert(data.msg);
                toPage(1);
            }, "json");
        }
    }
    function EditAds(ID) {
        waiting();
        $.post("GetAD", "id="+ID, function (data) {
            $("#ID").val(data.ID);
            $("#Name").val(data.Name);
            $("#Title").val(data.Title);
            $("#Img").val(data.Img);
            if (data.Img == "" || data.Img.length == 0) {
                $("#adimgshow").attr("src", "/img/noimg.png");
            } else {
                $("#adimgshow").attr("src", data.Img);
            }
            
            $("#LinkTo").val(data.LinkTo);
            //$("#Location").val(data.Location);
            $("#Descrition").val(data.Descrition);
            $("#BeginTime").val(data.BeginTime);
            $("#EndTime").val(data.EndTime);
            waitingHide();
            $("#EditAD").show();
        }, "json");
        
    }
    function addAds() {
        waiting();
        $.post("EditAds", $("#edit-ad-form").serialize(), function (data) {
            alert(data.msg);
            if (data.code == "1") {
                GetAdsCardList(AdsManager.index);
            }
            waitingHide();
        }, "json");
    }
    function UploadADIMG(file) {
        FileUpload(file, function (data) {
            $("#Img").val(data.msg);
            $("#adimgshow").attr("src", data.msg);
        });
    }
</script>
<ol class="breadcrumb">
    <li><a onclick="GetManager('Default')">首页</a></li>
    <li><a href="#">广告管理</a></li>
</ol>
<div class="col-lg-12 form-inline">

    关键字：
    <div class="input-group col-lg-4">
        <input type="text" class="form-control" id="key">
        <span class="input-group-addon" onclick="USearch()">查询</span>
    </div>
    <input value="新增" type="button" class="btn btn-primary" onclick="$('#EditAD').show()" />
    <div class="col-lg-12" id="adminlist">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>名称</th>
                    <th>主题</th>
                    <th>图片</th>
                    <th>跳转地址</th>
                    <th>广告位置</th>
                    <th>描述</th>
                    <th>启/禁用</th>
                    <th>开始时间</th>
                    <th>结束时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody id="adminbody">
                @Html.Action("AdsCardList")
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination"></ul>
        </nav>
    </div>
</div>
<div class="showBack col-md-12" id="EditAD">
    <div class="panel panel-danger col-md-4 col-md-offset-4" id="addpanel">
        <div class="panel-heading">
            编辑广告<input type="button" class="btn btn-default" style="float:right;margin-top:-7px" value="关闭" onclick="addClose()" />
        </div>
        <div class="panel-body">
            <form id="edit-ad-form">
                <div class="col-md-12">
                    <input type="text" class="hidden" name="ID" id="ID" />
                    <span class="col-md-4">名称：</span><div class="col-md-8"><input type="text" id="Name" name="Name" class="form-control" /></div>
                </div>
                <div class="col-md-12">
                    <input type="text" class="hidden" name="ID" id="ID" />
                    <span class="col-md-4">主题：</span><div class="col-md-8"><input type="text" id="Title" name="Title" class="form-control" /></div>
                </div>
                <div class="col-md-12">
                    <span class="col-md-4">图片：</span>
                    <div class="col-md-8">
                        <input type="text" id="Img" name="Img" class="hidden" />
                        <input type="file" id="upload" onchange="UploadADIMG(this)" class="hidden" />
                        <img width="200" id="adimgshow" src="/img/noimg.png" onclick="$('#upload').click()" />
                    </div>
                </div>
                <div class="col-md-12">
                    <span class="col-md-4">跳转地址：</span><div class="col-md-8"><input type="text" id="LinkTo" name="LinkTo" class="form-control" /></div>
                </div>  
                <div class="col-md-12">
                    <span class="col-md-4">广告位置：</span>
                    <div class="col-md-8">
                        <select id="Location" name="Location" class="form-control">
                            <option value="0">丝路联盟首页轮播</option>
                            <option value="1">丝路商城首页轮播</option>
                            <option value="2">首页body</option>
                        </select>
                    
                    </div>
                </div>
                <div class="col-md-12">
                    <span class="col-md-4">广告描述：</span><div class="col-md-8"><input type="text" id="Descrition" name="Descrition" class="form-control" /></div>
                </div>
                <div class="col-md-12">
                    <span class="col-md-4">开始时间：</span><div class="col-md-8"><input type="text" id="BeginTime" name="BeginTime" placeholder="格式：yyyy-MM-dd" onclick="WdatePicker({el:this,dateFmt:'yyyy-MM-dd'})" class="form-control" /></div>
                </div>
                <div class="col-md-12">
                    <span class="col-md-4">结束时间：</span><div class="col-md-8"><input type="text" id="EndTime" name="EndTime" placeholder="格式：yyyy-MM-dd" onclick="WdatePicker({el:this,dateFmt:'yyyy-MM-dd'})" class="form-control" /></div>
                </div>
            </form>

        </div>
        <div class="panel-footer" style="overflow:hidden">
            <input type="button" value="保存" class="btn btn-primary" style="float:right" onclick="addAds()" />
        </div>
    </div>
</div>