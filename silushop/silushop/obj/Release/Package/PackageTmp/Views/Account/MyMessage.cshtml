
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @Html.Action("Header", "Static")
    <script type="text/javascript" src="/js/ainatec.js"></script>
    <title>通知消息</title>
    <script>
        var index = 1;
        var sync = 1;
        function GetBill() {

            $.post("/Account/GetMyMessage", "index=" + (index++), function (list) {
                var temp = [];
                for (var i = 0; i < list.length; i++) {
                    temp.push('<li><div class="recordlist_date">' + getShopTime(list[i].Date) + '</div><div class="recordlist_info">'+list[i].Content+'</div></li>');
                }
                $("#paylist").append(temp.join(""));
                if (list.length > 0) {
                    sync = 1;
                }
            });
        }
        function getShopTime(time) {
            var now = new Date();
            var time = new Date(time);
            if (now.getFullYear() == time.getFullYear() && now.getMonth() == time.getMonth() && now.getDate() == time.getDate()) {
                return '<p>今天</p><p>' + (time.getMonth() + 1) + '-' + time.getDate() + '</p>';
            } else {
                return '<p>'+now.getFullYear()+'</p><p>' + (time.getMonth() + 1) + '-' + time.getDate() + '</p>'
            }
        }
        function showPrice(row) {
            if (row.InOut == 1) {
                return row.Val;
            }
            return -row.Val;
        }
        $(function () {
            GetBill();
        });
        $(document).scroll(
            function () {
                if ($(document).scrollTop() + window.innerHeight == $(document).height() && sync) {
                    if (!sync) {
                        return;
                    }
                    sync = 0;
                    GetBill();
                }
            });
    </script>
    <style>
        .recordlist_info {
            font-size: 1.4rem;
            color: #666666;
        }
        /*add*/
.recordlist li{display:-moz-box; display:-webkit-box; display:box; padding:1.5rem; border-bottom:1px solid #f4f4f4; font-size:1.6rem; background:#fff; position:relative;}
.recordlist_date{-webkit-box-flex:0; -webkit-flex:none; -ms-flex:none; flex:none; width:auto; color:#666; font-size:1.2rem; line-height:2rem; text-align:center; width:3.5rem;}
.recordlist_info{-webkit-box-flex:1; -webkit-flex:1; -ms-flex:1; flex:1; width:0; max-width:100%; display:block; position:relative; }
.recordlist_info p{padding:0 2.5rem 0 1rem;}
.recordlist_info p:nth-child(1){font-size:1.8rem; color:#ff6633;}
.recordlist_info p:nth-child(2){font-size:1.4rem; color:#666666;}
.recordlist_schedule{position:absolute; top:1.5rem; right:1rem; font-size:1.2rem; line-height:2rem; color:#33cc00;}
.recordlist_schedule_active{color:#0099cc}
    </style>
</head>
<body class="bgf4f4f4">
    <div class="header">
        <h3>通知消息</h3>
        <a onclick="window.history.back()" title=""><i class="icon-chevron-thin-left"></i></a>
    </div>
    <div class="recordlist">
        <ul id="paylist"></ul>
    </div>

</body>
</html>
