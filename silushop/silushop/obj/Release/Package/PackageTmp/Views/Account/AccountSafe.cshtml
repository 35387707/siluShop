
@{
    Layout = null;
    bool hasbank = Convert.ToBoolean(ViewData["hasbank"]);
}

<!DOCTYPE html>

<html>
<head>
    @Html.Action("Header", "Static")
    <title>账户安全</title>
    <style>
        .clearfix>li>a>span{float:right;margin-right:1rem;}
    </style>
</head>
<body class="bgf4f4f4">
    <div class="header">
        <h3>账户安全</h3>
        <a onclick="window.history.back()"  title=""><i class="icon-chevron-thin-left"></i></a>
    </div>
    <div class="titlelist">
        <ul class="clearfix">
            <li><a href="/Account/ChangePwd/0" title="">修改登录密码<i class="icon-chevron-thin-left arrow"></i></a></li>
            @*<li><a href="/Account/ChangePwd/1" title="">修改交易密码<i class="icon-chevron-thin-left arrow"></i></a></li>*@
            <li><a href="/Account/EditBank" title="">银行卡信息
                @if (hasbank)
                {
                    <span>已设置</span>
                }
                <i class="icon-chevron-thin-left arrow"></i></a></li>
            <li><a href="/Account/LoginOut" title="">退出登陆<i class="icon-chevron-thin-left arrow"></i></a></li>
        </ul>
    </div>
</body>
</html>
