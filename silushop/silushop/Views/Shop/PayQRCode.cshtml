
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @Html.Action("Header", "Static")
    <title>付款码</title>
    <style>
        .zf{
            border:none;
            display: block;
            width: 80%;
            height: 4rem;
            margin: 2rem auto 1rem auto;
            font-size: 1.6rem;
            background-color: #ff6633;
            color: #fff;
            border-radius: 0.4rem;
        }
        .qrcodebody{background-color:antiquewhite;
                        width: 28rem;
    height: 28rem;
    margin-top: 2rem;
    margin-left: 1.6rem;
    border-radius: 2rem;padding:2rem;
        }
        #code{width:24rem;height:24rem;background-color:beige;background-size: cover}
    </style>
    <script>
        function getQRCode() {
            $("#code").css("background-image", "url('/Shop/GetQRCode?r="+Math.random()+"')");
        }
        $(function () {
            $(".zf").on("click", function () {
                getQRCode();
            });
            setInterval(getQRCode, 1000*60*3);
            getQRCode();
        });
    </script>
</head>
<body class="bgf4f4f4">
    <div class="header">
        <h3>向商家付钱</h3>
        <a onclick="window.history.back()" title=""><i class="icon-chevron-thin-left"></i></a>
    </div>
    <div class="qrcodebody">
        <div id="code"></div>
    </div>
    <input type="button" class="zf" value="刷新二维码" />
    <div class="footnavbox"></div>
    <div class="footnav">
        @Html.Action("ShopFooter", "Static", new { id = 4 })
    </div>
</body>
</html>
