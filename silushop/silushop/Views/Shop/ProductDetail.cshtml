        @if (Convert.ToBoolean(ViewData["isLogin"]))
        {
            <a title="" class="product_add"><span class="active"><i class="icon-star-outline"></i><span id="sc">@(Convert.ToBoolean(ViewData["fav"]) ? "已收藏" : "收藏")</span></span></a>
