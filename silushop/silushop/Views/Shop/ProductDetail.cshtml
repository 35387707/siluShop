@model RelexBarDLL.ProductList
@{
    Layout = null;
    RelexBarDLL.Shop shop = ViewData["shop"] as RelexBarDLL.Shop;
    //string[] imglist = Model.ImgList.Split(';');
}

<!DOCTYPE html>

<html>
<head>
    @Html.Action("Header", "Static")
    <title>ProductDetail</title>
    <style>
        .pd-guige-item{display:block;width:100%;overflow:hidden;box-sizing:border-box;padding:1rem;}
            .pd-guige-item:nth-child(n+1) {
                border-top:1px solid white;
            }
        .pd-guige-item>.ggtitle{
            font-weight: 600;
    margin-left: 1.5rem;
    font-size: 1.6rem;
        }
        .pd-guigelist li{float: left;
    background-color: white;
    margin-left: 1rem;
    padding: .1rem 1rem;
    border-radius: .5rem;}
        .pd-guige-a{margin-top:1rem;}
        .btn-count{width: 4rem;
    border: none;
    border-radius: .3rem;
    vertical-align: middle;
    margin: 0 1rem;
    font-size: 3rem;  
    background: #808080;
    display: inline-block;
    text-align: center;}
        .gactive{background-color:#ff6600 !important;}
    </style>
    <script>
        var tp = [];
        var SPDesc=[];
        var pid = '@Model.ID';
        $(function () {
            $(".pd-guigelist li").on("click", function () {
                var l = parseInt($(this).attr("data-l"));
                SPDesc[l] = $(this).text();

                $(this).parent().children().removeClass("gactive");
                $(this).addClass("gactive");
                if(selectGG()){
                    GetPrice();
                    $("#selectgg").text("数量：" + $("#count").text() + "," + SPDesc.join(","));
                }
            });
            $(".btn-count").on("click", function () {
                var v = $(this).attr("data-v");
                $count = $("#count");
                console.log($count.text());
                var count;
                console.log(isNaN($count.text()));
                if (!isNaN($count.text())) {
                    count = $count.text();
                } else {
                    count = 1;
                }
                switch (v) {
                    case "-":
                        if (count > 1) {
                            $count.text(--count);
                        }
                        break;
                    case "+":
                        $count.text(++count);
                        break;
                    default:

                }
                if (selectGG()) {
                    $("#selectgg").text("数量：" + count + "," + SPDesc.join(","));
                }

            });
            $("#sc").on("click", function () {
                var text = $(this).text();
                if (text == "收藏") {
                    $.post("/Shop/AddFavorites", "PID=@Model.ID", function (data) {

                        if (data.code == 1) {
                            $("#sc").text("已收藏");
                        } else {
                            alert(data.msg);
                        }
                    }, "json");
                } else {
                    $.post("/Shop/DelFavorites", "PID=@Model.ID", function (data) {
                        if (data.code == 1) {
                            $("#sc").text("收藏");
                        } else {
                            alert(data.msg);
                        }
                    }, "json");
                }
            });
            $(".product_choose").on("click", function () {
                var s = $(this).attr("data-gg");
                if (s == "0") {
                    $(".gg").slideDown();
                    $(this).attr("data-gg", 1);
                } else {
                    $(".gg").slideUp();
                    $(this).attr("data-gg", 0);
                }
            });
            $("#pay").on("click", function () {
                if (!selectGG()) {
                    alert("请选择购买参数");
                    $(".gg").slideDown();
                    $(this).attr("data-gg", 1);
                    return;
                }
                $.post("/Shop/CreateOrder", "id=@Model.ID&SPDesc=" + SPDesc.join(",") + "&count=" + $("#count").text(), function (data) {
                    if (data.code == 1) {
                        location.href = "/Shop/OrderConfirm/" + data.msg;
                    } else {
                        alert(data.msg);
                    }
                }, "json");
            });
            $(".addcar").on("click", function () {
                if (!selectGG()) {
                    alert("请选择购买参数");
                    $(".gg").slideDown();
                    $(this).attr("data-gg", 1);
                } else {
                    $.post("/Shop/AddCar", "id=@Model.ID&SPDesc=" + SPDesc.join(",") + "&count=" +$("#count").text(), function (data) {
                        alert(data.msg);
                    }, "json");
                }
            });
        });
        function GetPrice() {
            $.post("/Shop/GetPrice", "id=" + pid + "&SPDesc=" + SPDesc.join(","), function (data) {
                if (data.Price == null && data.RealPrice == null) {
                    $("#price").text("暂无库存");
                    //$("#price").text("暂无库存");
                } else {
                    $("#price").text("¥" + data.Price);
                    //$("#price").text("¥" + data.RealPrice);
                }

            }, "json")
        }
        function chatQQ() {
            window.location.href = "mqqwpa://im/chat?chat_type=wpa&uin=@shop.ChatQQ&version=1&src_type=web&web_src=oicqzone.com";
        }
        function selectGG() {

            var $glist = $(".pd-guigelist");
            for (var i = 0; i < $glist.length; i++) {

                var $items = $glist.eq(i).children();
                for (var j = 0; j < $items.length; j++) {
                   //    console.log($items.eq(j).hasClass("gactive"));
                    if ($items.eq(j).hasClass("gactive")) {
                        break;
                    }
                    if (j == $items.length-1) {
                        return false;
                    }
                }

            }
            return true;
        }
    </script>
</head>
<body class="bgf4f4f4">
