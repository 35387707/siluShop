    </div>
    <div data-gg="0" class="product_choose">
        <a href="#" title="">
            <font color="#666666">购买：</font><span id="selectgg"></span>
            <i class="icon-chevron-thin-left"></i>
        </a>
    </div>
    <div class="gg">
        @{
            List<RelexBarDLL.TrueProduct> tplist = ViewData["Spec"] as List<RelexBarDLL.TrueProduct>;
            if (tplist != null && tplist.Count > 0)
            {
                string[] SPNames = tplist[0].SPName.Split(',');
                string[][] SPdescs = new string[tplist.Count][];
                for (int i = 0; i < tplist.Count; i++)
                {
                    SPdescs[i] = tplist[i].SPDesc.Split(',');
                }
                for (int i = 0; i < SPNames.Length; i++)
                {
                    @*<script>tp.push({ "spdesc":"@tplist[i].SPDesc","remark":"@tplist[i].Remark"});</script>*@
                    <div class="pd-guige-item">
                        <span class="ggtitle">@SPNames[i]：</span>
                        <div class="pd-guige-a">
                            <ul class="pd-guigelist">
                                @if (SPdescs.Length > 0)
                                {
                                    for (int j = 0; j < tplist.Count; j++)
                                    {
                                        <li data-l="@i">@SPdescs[j][i]</li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                }
            }
            <div class="pd-guige-item">
                <span class="ggtitle">购买数量：</span>
                <span data-v="-" class="btn-count">-</span>
                @*<input class="btn-count" type="button" value="-"/>*@
                <span id="count">1</span>
                <span data-v="+" class="btn-count">+</span>
                @*<input class="btn-count" type="button" value="+"/></span>*@
            </div>
        }
    </div>
    <div class="product_three">
        <span><i class="icon-checkmark"></i>平台发货&售后</span>
        <span><i class="icon-checkmark"></i>十三行正品</span>
        <span><i class="icon-checkmark"></i>享受收益</span>
    </div>
