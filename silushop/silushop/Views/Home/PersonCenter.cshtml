
@{
    Layout = null;
}
@model RelexBarDLL.Users
<!DOCTYPE html>

<html>
<head>
    @Html.Action("Header", "Static")
    <title>个人中心</title>
    <style>
        .center_links>ul>li>a>h5>span{margin-right:.5rem;}
    </style>
    <script>
        function HeadImgUpload(inputid) {
            var file = document.getElementById(inputid);
            var data = new FormData();
            data.append("file", file.files[0], file.files[0].name);
            $.ajax({
                url: "/File/UserHeadUpload",
                type: "POST",
                data: data,
                processData: false,
                contentType: false,
                success: function (respdata) {
                    if (respdata.code == '1') {
                        $("#headimage").attr("src", respdata.msg);
                    } else {
                        alert(respdata.msg);
                    }
                },
                error: function (data) {
                    alert("错误");
                }
            });

        }
    </script>
</head>
<body class="bgf4f4f4">
    <div class="centerhead" style="/*background-image:url(images/p11.jpg)*/">
        <input type="file" style="display:none" name="head" id="head" onchange="HeadImgUpload('head')" />
        <div class="centerhead_portrait" onclick="$('#head').click()"><img src="@(string.IsNullOrEmpty(Model.HeadImg1)?"/img/defaulthead.jpg":Model.HeadImg1)"  id="headimage" alt=""></div>
        <div class="centerhead_name">
            <h4>@Model.Name <a href="/Account/CName">@Model.TrueName</a></h4>
            <p><a href="#" title="">@ViewData["level"]</a></p>
        </div>
        <a href="/Home/Index" title="" class="centerhead_home"><i class="icon-home"></i></a>
    </div>
    <div class="center_point">
        <ul class="clearfix">
            <li><a href="/Account/Bill" title=""><h5>@ViewData["sljf"]</h5><h6>丝路积分</h6></a></li>
            <li><a href="/Account/Bill" title=""><h5>@ViewData["sy"]</h5><h6>分享积分</h6></a></li>
            <li><a href="/Account/MyBalance" title=""><h5>@Model.Score</h5><h6>钻石回购</h6></a></li>
        </ul>
    </div>
    <div class="center_links">
        <ul>
            <li><a href="/Account/SGQ"><h5>我的首购券 <span style="float:right;">@Model.Balance</span></h5><div class="center_links_icon2"><img src="/images/ico17.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
            <li><a href="/Shop/Index"><h5>我的购物券 <span style="float:right;">@Model.ShoppingVoucher</span></h5><div class="center_links_icon2"><img src="/images/ico17.png" alt=""></div></a></li>
            <li><a href="/Account/NewAccountTicket" title=""><h5>我的兑换券</h5><div class="center_links_icon2"><img src="/images/ico17.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
            <li><a href="/Account/MyNextAccount" title=""><h5>我的邀请</h5><div class="center_links_icon2"><img src="/images/ico3.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
            <li><a href="/Account/MyNextAccount/r" title=""><h5>我的人脉 <span style="float:right;">@ViewData["td"]</span></h5><div class="center_links_icon2"><img src="/images/ico18.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
            <li><a href="/Account/RecAddress" title=""><h5>收货地址</h5><div class="center_links_icon2"><img src="/images/ico21.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
            <li><a href="/Account/AccountSafe" title=""><h5>账户安全</h5><div class="center_links_icon2"><img src="/images/ico22.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
            <li><a href="/Home/UserHelp/1" title=""><h5>关于我们</h5><div class="center_links_icon2"><img src="/images/ico23.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
            <li><a href="/Home/UserHelp/2" title=""><h5>帮助中心</h5><div class="center_links_icon2"><img src="/images/ico24.png" alt=""></div><i class="icon-chevron-thin-left"></i></a></li>
        </ul>
    </div>
    <div class="footnavbox"></div>
</body>
</html>
